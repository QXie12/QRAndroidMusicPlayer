<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SongList.MySongListFragment"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/create_layout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/create_card"
            android:layout_width="65dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/create_avatar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/ic_create_new_folder" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/create"
            android:layout_width="99dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="创建歌单"
            app:layout_constraintStart_toEndOf="@+id/create_card"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/import_card"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/import_avatar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/ic_share" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/import_text"
            android:layout_width="141dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="导入外部歌单"
            app:layout_constraintStart_toEndOf="@+id/import_card"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_song_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />








</LinearLayout>

